@model SalonSamochodowy.Models.Fabryka

@{
    ViewBag.Title = "Edit";
}

<div class="text-center">
    <h2>Fabryka</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="text-center">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="text-center">
            @Html.LabelFor(model => model.Nazwa, htmlAttributes: new { @class = "text-center" })<br />
            <div class="text-center">
                @Html.EditorFor(model => model.Nazwa, new { htmlAttributes = new { @class = "text-center" } })<br />
                @Html.ValidationMessageFor(model => model.Nazwa, "", new { @class = "text-danger" })<br />
            </div>
        </div>

        <div class="text-center">
            @Html.LabelFor(model => model.Adres, htmlAttributes: new { @class = "text-center" })<br />
            <div class="text-center">
                @Html.EditorFor(model => model.Adres, new { htmlAttributes = new { @class = "text-center" } })<br />
                @Html.ValidationMessageFor(model => model.Adres, "", new { @class = "text-danger" })<br />
            </div>
        </div>

        <div class="text-center">
            <label>Numer telefonu</label><br />
            <div class="text-center">
                @Html.EditorFor(model => model.Nr_telefonu, new { htmlAttributes = new { @class = "text-center" } })<br />
                @Html.ValidationMessageFor(model => model.Nr_telefonu, "", new { @class = "text-danger" })<br />
            </div>
        </div>

        <div class="text-center">
            <div class="text-center">
                <input type="submit" value="Zapisz" class="btn btn-success" />
            </div>
        </div>
    </div>
}

