@model IEnumerable<SalonSamochodowy.Models.Dostawa>

@{
    ViewBag.Title = "Index";
}
@{ int rowNo = 0; }
<div class="text-center">
    <h2>Dostawy</h2>
</div>

<table class="table table-striped">
    <tr>
        <th>
            Nr
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id_zamowienia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data_dostawy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ilosc_dostarczonych)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @(rowNo += 1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Id_zamowienia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data_dostawy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ilosc_dostarczonych)
        </td>
        @if (item != null)
        {
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }, new { @class = "btn btn-warning"})
            </td>
        }
    </tr>
}

</table>
