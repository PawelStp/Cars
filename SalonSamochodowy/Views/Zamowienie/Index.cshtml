@model IEnumerable<SalonSamochodowy.ViewModels.ZamowienieLisViewModel>

@{
    ViewBag.Title = "Index";
}
@{ int rowNo = 0; }
<div class="text-center">
    <h2>Zamówienia</h2>

    @if (ViewBag.Message == null)
    {
        <p>
            @Html.ActionLink("Dodaj zamówienie", "Create", null, new { @class = "btn btn-success"})
        </p>
    }
</div>

<table class="table table-striped">
    <tr>
        <th>
            Nr
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id_pracownika)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwisko)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NazwaFabryki)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marka)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PojemnoscSilnika)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Moc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ilość)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IloscDostarczonych)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @(rowNo += 1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Id_pracownika)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Imie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwisko)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NazwaFabryki)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marka)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PojemnoscSilnika)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Moc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ilość)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IloscDostarczonych)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>
        <td>
            @if (item.Status != "Zrealizowane")
                {
                @Html.ActionLink("Dodaj dostawę", "Create", "Dostawa", new { id = item.Id }, new { @class = "btn btn-default"})
            }
        </td>

    </tr>
}

</table>
