@model SalonSamochodowy.ViewModels.ZakupViewModel

@{
    ViewBag.Title = "Create";
}

<div class="text-center">
    <h2>Dodaj sprzedaż</h2>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="text-center">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="text-center">
            @Html.LabelFor(model => model.Data_zakupu, htmlAttributes: new { @class = "control-label" })<br/>
            <div class="">
                @Html.EditorFor(model => model.Data_zakupu, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.Data_zakupu, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="text-center">
            @Html.LabelFor(m => m.Klienci, new { @class = "control-label" })<br />
            <div class="">
                @Html.DropDownList("Id_klienta", Model.Klienci, "Wybierz")
            </div>
        </div>
        <br />
        <div class="form-group hide">
            @Html.LabelFor(model => model.Id_pracownika, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Id_pracownika, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Id_pracownika, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group hide">
            @Html.LabelFor(model => model.Id_samochodu, htmlAttributes: new { @class = "control-label" })
            <div class="">
                @Html.EditorFor(model => model.Id_samochodu, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.Id_samochodu, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="text-center">
                <input type="submit" value="Dodaj" class="btn btn-success" />
        </div>
    </div>
}