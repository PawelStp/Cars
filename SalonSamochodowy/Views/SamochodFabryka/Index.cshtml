@model IEnumerable<SalonSamochodowy.ViewModels.SamochodFabrykaViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="text-center">
    <h2>Samochody fabryczne</h2>
    @Html.ActionLink("Dodaj samochód", "Create", null, new { @class = "btn btn-success" })
    <br/>
    <br/>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FabrykaName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marka)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Typ_wyposazenia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pojemnosc_silnika)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data_produkcji)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Moc_silnika)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cena_fabryka)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FabrykaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Typ_wyposazenia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pojemnosc_silnika)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_produkcji)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Moc_silnika)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cena_fabryka)
            </td>
        </tr>
    }

</table>
