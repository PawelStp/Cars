@model IEnumerable<SalonSamochodowy.Models.Usterka>

@{
    ViewBag.Title = "Index";
}
@{ int rowNo = 0; }
<div class="text-center">
    <h2>Usterki</h2>

    <p>
        @Html.ActionLink("Dodaj usterkę", "Create", null, new { @class = "btn btn-success"})
    </p>
</div>

<table class="table table-striped">
    <tr>
        <th>
            Nr
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Koszt_czesci)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Koszt_robocizny)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ogolny_koszt)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @(rowNo += 1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Koszt_czesci)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Koszt_robocizny)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ogolny_koszt)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.Id }, new { @class = "btn btn-warning"}) 

        </td>
    </tr>
}

</table>
