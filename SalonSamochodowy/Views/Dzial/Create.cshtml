@model SalonSamochodowy.Models.Dzial

@{
    ViewBag.Title = "Create";
}

<dic class="text-center">
<h2>Dodaj dział</h2>
</dic>


@using (Html.BeginForm("Create", "Dzial", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="text-center">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })<br/>
        <div class="text-center">
            @Html.LabelFor(model => model.Nazwa, htmlAttributes: new { @class = "text-center" })<br />
            <div class="text-center">
                @Html.EditorFor(model => model.Nazwa, new { htmlAttributes = new { @class = "text-center" } })<br />
                @Html.ValidationMessageFor(model => model.Nazwa, "", new { @class = "text-danger" })<br />
            </div>
        </div>

        <div class="text-center">
            <div class="text-center">
                <input type="submit" value="Dodaj dział" class="btn btn-success" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
