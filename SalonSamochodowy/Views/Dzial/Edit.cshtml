@model SalonSamochodowy.Models.Dzial

@{
    ViewBag.Title = "Edit";
}
<div class="text-center">
    <h2>Edycja działu</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="text-center">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="text-center">
            @Html.LabelFor(model => model.Nazwa, htmlAttributes: new { @class = "control-label" })
            <br/>
            <div class="">
                @Html.EditorFor(model => model.Nazwa, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.Nazwa, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>
        <div class="text-center">
                <input type="submit" value="Zapisz" class="btn btn-success" />
        </div>
    </div>
}


