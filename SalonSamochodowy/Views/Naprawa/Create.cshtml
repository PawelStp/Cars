@model SalonSamochodowy.ViewModels.NaprawaViewModels

@{
    ViewBag.Title = "Create";
}

<div class="text-center">
    <h2>Dodaj naprawę</h2>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="text-center">
        <hr />
        <br/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group hide">
            @Html.LabelFor(model => model.Id_pracownika, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Id_pracownika, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.Id_pracownika, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group hide">
            @Html.LabelFor(model => model.Id_samochodu, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Id_samochodu, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.Id_samochodu, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="text-center">
            @Html.LabelFor(model => model.Data_naprawy, htmlAttributes: new { @class = "control-label" })
            <br/>
            <div class="">
                @Html.EditorFor(model => model.Data_naprawy, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.Data_naprawy, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>
        <div class="text-center">
            @Html.LabelFor(m => m.Usterki, new { @class = "control-label" })
            <br/>
            <div class="">
                @Html.DropDownList("Id_usterki", Model.Usterki, "Wybierz")
            </div>
        </div><br/>

        <div class="text-center">
                <input type="submit" value="Dodaj" class="btn btn-success" />
        </div>
    </div>
}