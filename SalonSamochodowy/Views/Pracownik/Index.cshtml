@model IEnumerable<SalonSamochodowy.ViewModels.PracownikViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="text-center">
    <h2>Pracownicy</h2>

    <p>
        @Html.ActionLink("Dodaj pracownika", "Create", null, new { @class = "btn btn-success" })
    </p>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Imie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwisko)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NazwaDzialu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stanowisko)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataZatrudnienia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoKiedyZatrudniony)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PESEL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NrTelefonu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pensja)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Imie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwisko)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NazwaDzialu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stanowisko)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataZatrudnienia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DoKiedyZatrudniony)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PESEL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NrTelefonu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pensja)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.Id }, new { @class = "btn btn-warning"}) 

        </td>
    </tr>
}

</table>
